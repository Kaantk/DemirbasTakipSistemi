@{
	ViewData["Title"] = "Şifremi Unuttum";
}

@section Styles {
	<link href="~/css/Pages/ForgotPassword.css" rel="stylesheet" />
}

<main>
	<div id="login-wrapper">
		<!-- Blue Vector Background -->
		<img class="blueVector" src="~/assets/images/bluevector.png" />
		<!-- Purple Vector Background -->
		<img class="purpleVector" src="~/assets/images/purplevector.png" />
		<div id="login-container">
			<!-- Illustrations -->
			<img id="illustrations" src="~/assets/images/illustrations.jpg" />
			<!-- Login Base Layout -->
			<div id="login-base-layout">
				<!-- Logo -->
				<a asp-controller="Auth" asp-action="Login">
					<img class="bfbLogo" src="~/assets/images/bfblogo.png" />
				</a>
				<!-- Proje Başlık -->
				<div>
					<h1 id="project-title">Demirbaş Takip Sistemi</h1>
				</div>
				<!-- Giriş Yap -->
				<div class="title-with-lines">
					<span class="section-title">Şifremi Unuttum</span>
				</div>
				<!-- Şifre Yenileme Form -->
				<div class="login-form-base-layout">
					<form id="login-base-form" asp-controller="Auth" asp-action="ForgotPassword" method="post">
						<div>
							<label for="email">E-mail</label>
							<input type="email" id="email" name="email" autocomplete="email" required
								   value="@Model?.Email" />
						</div>
						<div>
							@if (ViewBag.ErrorMessage != null)
							{
								<span class="errorMessage">
									@ViewBag.ErrorMessage
								</span>
							}
							@if (ViewBag.SuccessMessage != null)
							{
								<span class="successMessage">
									@ViewBag.SuccessMessage
								</span>
							}
						</div>
						<button id="button-login-form" type="submit">Yeni Şifre Gönder</button>
					</form>
				</div>
				<div class="navigation-login-wrapper">
					<img src="~/assets/svg/blueArrowBack.svg" />
					<a asp-controller="Auth" asp-action="Login" class="navigationLoginPage">Giriş ekranına dön</a>
				</div>
			</div>
		</div>
	</div>
</main>
